<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
    <%  }) %>
   </ul>
  <% } %>


  <% if(locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin") { %> <h2>Welcome <%- locals.accountData.account_firstname %> </h2>
    <p><a href="/account/update/<%- locals.accountData.account_id %>">Update account information</a></p>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
  <% } else if (locals.accountData.account_type == "Client") { %>
    <h2>Welcome <%- locals.accountData.account_firstname %></h2>
    <p><a href="/account/update/<%- locals.accountData.account_id %>">Update account information</a></p>
    <h3>Delete Account &#128532; &#128532; ?</h3>
    <p class="fineprint">We're sad seeing you leave!</p>
    <p><a href="/account/delete-account/<%- locals.accountData.account_id %>">Delete account information</a></p>
    <% } %>
    
    <p style="font-size: 1.2rem;font-family: Arial, Helvetica, sans-serif;">You're logged in</p>