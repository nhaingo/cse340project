<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <section id="register-form">
    <form id="updateForm"action="/account/update" method="post">
        <p>All fields are required.</p>
        <fieldset>
            <legend>Update Account</legend> 
            <label for="firstname">First Name</label>
            <input type="text" id="accountFirstname" name="account_firstname" required value="<%= locals.account_firstname %>">

            <label for="lastname">Last Name</label>
            <input type="text" id="accountLastname" name="account_lastname" required value="<%= locals.account_lastname %>">

            <label for="email">Email Address</label>
            <input type="email" id="email" name="account_email" required value="<%= locals.account_email %>" >

            <button id="account-btn" type="submit">Update</button>
            <input type="hidden" name="account_id" value="<%= locals.account_id %>">
        </fieldset>
    </form>
    <form id="updatePasswordForm"action="/account/update-password" method="post">
        <fieldset>
            <legend>Change Password</legend> 

            <label for="accountPassword">Update Password:</label> 
            <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <p class="fineprint">Enter a new valid Password</p>
            <p class="fineprint">Password must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p> 

            <button id="account-btn" type="submit">Submit New Password</button>
            <input type="hidden" name="account_id" value="<%= locals.account_id %>">
        </fieldset>
    </form>
</section>

